<p id="notice"><%= notice %></p>

<h1>Listing Sadmins</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Organization</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sadmins.each do |sadmin| %>
      <tr>
        <td><%= sadmin.first_name %></td>
        <td><%= sadmin.last_name %></td>
        <td><%= sadmin.email %></td>
        <td><%= sadmin.organization %></td>
        <td><%= sadmin.phone_number %></td>
        <td><%= link_to 'Show', sadmin %></td>
        <td><%= link_to 'Edit', edit_sadmin_path(sadmin) %></td>
        <td><%= link_to 'Destroy', sadmin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

